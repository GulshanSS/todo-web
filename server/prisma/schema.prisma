generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Todo {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  task String
  status String @default("Pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
